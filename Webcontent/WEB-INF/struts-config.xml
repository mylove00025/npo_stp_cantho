    <plug-in className="org.apache.struts.tiles.TilesPlugin" >

      <set-property property="definitions-config"
                       value="/WEB-INF/tiles-defs.xml" />
      <set-property property="moduleAware" value="true" />
    </plug-in>
  -->


  <!-- =================================================== Validator plugin -->

  <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property
        property="pathnames"
        value="/org/apache/struts/validator/validator-rules.xml,
               /WEB-INF/validation.xml,
               /WEB-INF/validation-admin.xml,
               /WEB-INF/validation-prevent.xml"/>

  </plug-in>
  <plug-in className="com.osp.npo.app.plugin.InitSystemPlugin">
    <set-property property="expire.prevent.data.hour" value="0"/><!-- Hour range: 0 - 23, default is 0 -->
    <set-property property="expire.prevent.data.minute" value="0"/><!-- Minute range: 0 - 59, default is 0 -->
    <set-property property="expire.prevent.data.period" value="1440"/><!-- Period unit is Minute, default is 1440 -->
    <set-property property="contract.statistical.period" value="60"/><!-- Period unit is Second -->

    <!-- Copyright -->
	<set-property property="copyright.customer.id" value="2528342110"/>
    <set-property property="copyright.key" value="A0NvyD3zoBwaDMCR0kgR/YCLw"/>
  </plug-in>

</struts-config>

